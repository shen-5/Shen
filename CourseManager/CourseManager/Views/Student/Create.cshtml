@model CourseManager.Models.Students

@{
    ViewBag.Title = "Create";
    var class_ = (List<CourseManager.Models.Classes>)ViewBag.Class_;
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Students</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-lable col-md-2"})
        </div>
        <div class="editor-field col-md-10">
            @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ClassName, htmlAttributes: new { @class = "control-lable col-md-2"})
        </div>
        <div class="editor-field col-md-10">
            <select name="ClassId" class="editor-field form-control">
                @foreach (var temp in class_)
                { 
                    <option value="@temp.Id">@temp.Name</option>
                }
            </select>
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
